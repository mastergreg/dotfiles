:insert
TARGET = 
CC = gcc
CCFLAGS +=
OPT = 2

DEBUG = "y"

ifeq ($(DEBUG),"y")
	CCFLAGS += -D$(TARGET)_DEBUG=1
	CCFLAGS += -g -O0 -Werror -Wall -Wextra -Wuninitialized
else
	CCFLAGS += -D$(TARGET)_DEBUG=0
	CCFLAGS += -O$(OPT) -Werror -Wall
endif

CCFILES += $(wildcard *.c)
OBJ +=  $(patsubst %.c,%.o,$(CCFILES))
DEPENDS += $(wildcard *.h) 


all: $(TARGET)

$(TARGET): $(OBJ) $(DEPENDS)
	$(CC) $(OBJ) -o $(TARGET)

%.o:	%.c
	$(CC) $(CCFLAGS) $< -o $@


.PHONY:	clean all indent
clean:
	rm -f $(OBJ) $(TARGET)
.
